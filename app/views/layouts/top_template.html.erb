<!DOCTYPE html>
<html>
  <head>
    <title>StockManage</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" >
    <link href="https://cdn.rawgit.com/michalsnik/aos/2.1.1/dist/aos.css" rel="stylesheet">
  </head>
  <body class="clerefix">

  <section id="mainbar">
   <div class="top_main">
     <header id="top_head">
      <%= link_to root_path do %>
       <img class="logo" src="/StockMemo.png" alt="StockMemo" height="60">
      <% end %>
      <ul class="header_list">
        <li class="" id="">
          <% if user_signed_in? %>
            <%= link_to '企業登録', new_company_path, class: "nav-items" %>
            <%= link_to '企業一覧', companies_path, class: "nav-items" %>
            <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "nav-items" %>
          <% else %>
            <%= link_to '新規登録', new_user_registration_path, class: "nav-items" %>
            <%= link_to 'ログイン', new_user_session_path, class: "nav-items" %>
          <% end %>
        </li>
      </ul>

      <% unless flash.empty? %>
        <div id="message_board" data-aos="fade-left" data-aos-easing="linear" data-aos-duration="1500">
          <span class="sign_message"><%= flash[:notice] %></span>
        </div>
      <% end %>
     </header>

      <div id="top_firld_main" data-aos="zoom-out-down"  data-aos-duration="1100">
        <div class=""><img class="firld_logo" src="/StockMemo.png" alt="StockMemo" height="80"></div>
        <h2><span>企業名を、その場でメモする<span class="title_under_bar">Stock Memo</span></span></h2>
        <div class="frame">
          <!-- ログイン時のビュー -->
        <% if user_signed_in? %>
          <div class="about-firld_left clerefix">
            <div class="about-firld-title">
              <h3><strong>企業をメモする</strong></h3>
            </div>
            <%= link_to new_company_path do %>
              <button class="button type3"><span>企業登録</span></button>
            <% end %>
          </div>
          <div class="about-firld_right clerefix">
            <div class="about-firld-title">
              <h3><strong>メモした企業を見る</strong></h3>
            </div>
            <%= link_to companies_path do %>
              <button class="button type3"><span>企業一覧</span></button>
            <% end %>
          </div>
          <!-- 未ログイン時のビュー -->
        <% else %>
          <div class="about-firld_left clerefix">
            <div class="about-firld-title">
              <h3><strong>会員登録がまだの方</strong></h3>
            </div>
            <%= link_to new_user_registration_path do %>
              <button class="button type3"><span>新規登録</span></button>
            <% end %>
          </div>
          <div class="about-firld_right clerefix">
          <div class="about-firld-title">
            <h3><strong>会員登録がお済みの方</strong></h3>
          </div>
          <%= link_to new_user_session_path do %>
            <button class="button type3"><span>ログイン</span></button>
          <% end %>
          </div>
        <% end %>
      </div>
    </div>

     </div>
  </section>




    <div id="footer_sab" class="clerefix">
      <div class="footer-left">
        <!-- ログイン時のビュー -->
        <% if user_signed_in? %>
          <ul id="footer-menu">
            <li>
              <%= link_to new_company_path do %>
              <span>企業登録</span>
              <% end %>
            </li>
            <li>
              <%= link_to new_company_path do %>
              <span>企業一覧</span>
              <% end %>
            </li>
            <li>
              <%= link_to new_company_path do %>
              <span>ログアウト</span>
              <% end %>
            </li>
          </ul>
        <!-- 未ログイン時のビュー -->
        <% else %>
          <ul id="footer-menu">
            <li>
              <%= link_to new_user_registration_path do %>
              <span>新規登録</span>
              <% end %>
            </li>
            <li>
              <%= link_to new_user_session_path do %>
              <span>ログイン</span>
              <% end %>
            </li>
          </ul>
        <% end %>
      </div>
      <div class="footer-right">
        <div class="space_footer"></div>
        <div class="banner_1">
          <%= link_to "https://finance.yahoo.co.jp/", target: "_blank", class: "banner_logo" do %>
            <img id="banner_logo_1" src="/yahoo.jpg" alt="StockMemo" height="70">
          <% end %>
        <div class="banner_2">
          <%= link_to "https://minkabu.jp/", target: "_blank", class: "banner_logo" do %>
            <img id="banner_logo_2" src="/minkabu.jpg" alt="StockMemo" height="70">
          <% end %>
        </div>
      </div>
      <div class="space_footer"></div>
      </div>
    </div>

    <footer class="clerefix">
      <span class="footer-text">Copyright ©StockMemo</span>
    </footer>



    <script src="https://cdn.rawgit.com/michalsnik/aos/2.1.1/dist/aos.js"></script>
    <script>
      AOS.init();
    </script>


  </body>
</html>
