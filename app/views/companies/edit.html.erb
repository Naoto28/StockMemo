  <section id="mainbar" >
    <p class="companies__title">企業編集</p>
    <div id="company_new">
      <div id="company_form">
        <%= form_for(@company) do |f| %>
        <h4 class="" id="form_title"></h4>
        <div class="field">
          <%= f.label :証券コード, class: "control-label company_form_name" %>
          <%= f.text_field :stock_code, placeholder: "整数4桁で入力してください", class: "form-control" %>
        </div>
        <div class="field">
          <%= f.label :企業名, class: "control-label company_form_name"%>
          <%= f.text_field :company_name, placeholder: "例：東京エレクトロン", class: "form-control" %>
        </div>
        <div class="field company_form_textarea">
          <%= f.label :メモ, class: "control-label company_form_name" %>
          <%= f.text_area :text, placeholder: "例：決算がとても良かった", class: "form-control company_form_textarea", rows: "5"  %>
        </div>
        <div class="company_new_btn_box">
        <%= f.submit value: "変更する", class: "company_form_btn" %>
        </div>
        <% end %>
      </div>
    </div>
  </section>

